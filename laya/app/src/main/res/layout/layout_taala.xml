<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="1dp"
    android:orientation="vertical">



    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/tala_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        fab:fab_addButtonSize="mini"
        fab:fab_colorPressed="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_adi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/aditala"
                fab:fab_colorPressed="@android:color/transparent"
                fab:fab_size="mini" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_rupaka"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:src="@mipmap/rupaka"
                fab:fab_colorPressed="@android:color/transparent"
                fab:fab_size="mini"
                fab:fab_title="Taala 2" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_khanda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/khandachapu"
                fab:fab_colorPressed="@android:color/transparent"
                fab:fab_size="mini"
                fab:fab_title="Taala 3" />

            <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_mishra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/mishrachapu"
                fab:fab_colorPressed="@android:color/transparent"
                fab:fab_size="mini"
                fab:fab_title="Taala 3" />
        </LinearLayout>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</LinearLayout>